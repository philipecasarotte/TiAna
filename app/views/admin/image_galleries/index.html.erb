<h1>Listing Image Galleries</h1>
<br />
<table>
  <tr>
  <th>Name</th>
  </tr>
  <%- @image_galleries.each do |image_gallery|%>
    <tr>
	  <td><%=h image_gallery.name %></td>
      <td><%= link_to "Images(#{image_gallery.images.size})", admin_image_gallery_images_path(image_gallery) %></td>
	  <td><%= link_to 'Edit', edit_object_url(image_gallery) %></td>
      <td><%= link_to 'Destroy', object_url(image_gallery), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br/>

<%= link_to 'New Image Gallery', new_object_url %> | <%= link_to "Reorder", reorder_admin_image_galleries_path %>