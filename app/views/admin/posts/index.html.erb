<h1>Listando Mensagens</h1>
<br />
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Mensagem</th>
	<th>Enviada em:</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
	  <td><%= post.name %></td>
      <td><%= post.email %></td>
	  <td><%= post.body.summary(100) %></td>
	  <td><%= post.created_at.strftime("%d/%m/%Y") %></td>
      <td><%= link_to "Editar", edit_object_url(post) %></td>
      <td><%= link_to "Deletar", object_url(post), :confirm => 'VocÃª tem certeza?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to "Adicionar Mensagem", new_object_url %>