<h1>Listando Imagens da Galeria "<%= parent_object.name %>"</h1>
<br />
<table>
  <tr>
    <th>Imagem</th>
  </tr>
  <% @images.each do |image| %>
    <tr>
      <td><%= image_tag image.image.url(:thumb) %></td>
      <td><%= link_to "Editar", edit_object_url(image) %></td>
      <td><%= link_to "Deletar", object_url(image), :confirm => 'VocÃª tem certeza?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to "Adicionar Imagem", new_object_url %> | <%= link_to "Reordenar", reorder_admin_image_gallery_images_path(parent_object) %> | <%= link_to "Voltar", admin_image_galleries_path %>