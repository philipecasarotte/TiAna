<h1>Reorder <%= @items.first.class.to_s.pluralize %></h1>

<ul id="order">
	<% @items.each do |item| %>
		<li id="item_<%= item.id %>"><%= image_tag item.image.url(:thumb) %></li>
	<% end %>
</ul>

<%= sortable_element 'order', 
      :complete => visual_effect(:highlight, 'order'), 
      :url => { :action => "order" } %>

<p><%= link_to "Back", collection_url %></p>