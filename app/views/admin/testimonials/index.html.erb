<h1>Listing Testimonials</h1>
<br />
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Message</th>
	<th>Sent on</th>
  </tr>
  <% @testimonials.each do |testimonial| %>
    <tr>
	  <td><%= testimonial.name %></td>
      <td><%= testimonial.email %></td>
	  <td><%= testimonial.body.summary(100) %></td>
	  <td><%= testimonial.created_at.strftime("%b %d, %Y") %></td>
      <td><%= link_to "Editar", edit_object_url(testimonial) %></td>
      <td><%= link_to "Deletar", object_url(testimonial), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<br />
<%= link_to "New Testimonial", new_object_url %>